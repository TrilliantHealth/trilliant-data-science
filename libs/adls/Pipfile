pytest-mock = "~=3.10"
types-setuptools = "*"
# CORE
"thds.core" = {path = "../core", editable = true, extras = ["dev"]}
# PROJECT-SPECIFIC

#################
# By contrast, runtime dependencies (defined in pyproject.toml) should
# be as loose as semantically correct, because this is a library and
# we want to give applications maximum latitude to choose their own
# versions of libraries.
#################

[packages]
# DO NOT SPECIFY OTHER NON-LOCAL RUNTIME DEPENDENCIES HERE.
"thds.adls" = {path = ".", editable = true}
"thds.core" = {path = "../core", editable = true}
# PUT THOSE IN pyproject.toml ONLY PLEASE.

